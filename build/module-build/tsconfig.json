{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es5",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "incremental": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "lib": [
          "ES2015",
          "ES2016.Array.Include",
          "ES2017.String",
          "ES2018.Promise",
          "ES2019",
          "DOM",
		  ]
    }
}
