{
    "extends": "../../module-build/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "tsBuildInfoFile": ".build/tsconfig.tsbuildinfo.cjs",
        "jsx": "react",
        "rootDir": "src",
        "allowUnreachableCode": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": false,
        "strictNullChecks":false
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "src/__tests__"]
}